<Page loaded="onLoaded">
    <StackLayout orientation="vertical">
        <Image src="res://logo" class="fade-in" id="logo" stretch="none" horizontalAlignment="center" ></Image>
        <TextField id="username" text="{{ username }}" hint="Username" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField id="password" secure="true" text="{{ password }}" hint="Password" /> 

        <Button text="Sign in" class="link" tap="signIn" />
        <Button text="Sign up for AspireApp!" tap="register" />
    </StackLayout>
</Page>